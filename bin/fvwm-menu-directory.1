[ \fB\-\-icon\-title\fR|\fB\-icon\-t\fR \s-1XPM\s0 ]
[ \fB\-\-icon\-dir\fR|\fB\-icon\-d\fR \s-1XPM\s0 ]
[ \fB\-\-icon\-file\fR|\fB\-icon\-f\fR \s-1XPM\s0 ]
[ \fB\-\-icon\-app\fR|\fB\-icon\-a\fR \s-1XPM\s0 ]
[ \fB\-\-wm\-icons\fR ]
[ \fB\-\-dir\fR|\fB\-d\fR \s-1NAME\s0 ]
